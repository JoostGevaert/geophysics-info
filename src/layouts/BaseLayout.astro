---
import type { Props as BaseHeadProps } from "../components/BaseHead.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  content: BaseHeadProps;
  showPageHeading?: boolean;
}

const { content, showPageHeading = true } = Astro.props as Props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${content.title} | Geophysics.info`}
      description={content.description}
    />
  </head>
  <body class="mx-auto max-w-6xl px-4 md:px-6">
    <Header />
    <main class="py-4">
      {
        showPageHeading && (
          <div class="mb-2">
            <h1 class="text-2xl font-medium">{content.title}</h1>
            <h5 class="text-lg">{content.description}</h5>
          </div>
        )
      }
      <slot />
    </main>
    <Footer />
  </body>
</html>
